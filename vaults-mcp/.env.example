# Vaults MCP Server Configuration

# Required: Production Function App URL
VAULTS_BASE_URL=https://your-function-app.azurewebsites.net

# Required: Function key for authenticated endpoints
# Get this from your Azure Function App settings
VAULTS_FUNCTION_KEY=your-function-key-here

# Optional: HTTP client settings
VAULTS_TIMEOUT=30
VAULTS_MAX_RETRIES=5
VAULTS_RETRY_DELAY=1.0

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
VAULTS_LOG_LEVEL=INFO

# Optional: MCP Server settings
VAULTS_SERVER_NAME=vaults-mcp
VAULTS_SERVER_VERSION=1.0.0